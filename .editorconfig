# EditorConfig - Ensures consistent coding styles across different IDEs
# Supported by: IntelliJ IDEA, Eclipse, VS Code, NetBeans, and more
# Learn more: https://editorconfig.org

root = true

# All files - default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
charset = utf-8
indent_style = tab
indent_size = 4

# XML files (pom.xml, TestNG suites, etc.)
[*.xml]
charset = utf-8
indent_style = tab
indent_size = 4

# Cucumber feature files
[*.feature]
charset = utf-8
indent_style = space
indent_size = 2

# Properties files
[*.properties]
charset = utf-8
indent_style = space
indent_size = 2

# Markdown files
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

# JSON files
[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# Shell scripts (Linux/Mac)
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# Windows scripts
[*.{bat,cmd,ps1}]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 2
