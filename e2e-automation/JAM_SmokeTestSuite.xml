<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Job Mapping - Smoke Test Suite" parallel="tests" thread-count="4" preserve-order="true" verbose="2">
    
    <listeners> 
        <listener class-name="com.kfonetalentsuite.listeners.ExcelReportListener" />
        <listener class-name="hooks.JobMapping.SuiteHooks" />
        <listener class-name="com.kfonetalentsuite.listeners.AllureScreenshotListener" />
        <listener class-name="com.kfonetalentsuite.testNGAnalyzer.MyTransform" />
        <listener class-name="com.kfonetalentsuite.testNGAnalyzer.SuiteRetryListener" />
    </listeners>
    
    <!-- SMOKE TESTS - Quick Validation -->
    <!-- Purpose: Validate major features work. Run before each release. -->
    <!-- Estimated Time: 15-25 minutes -->
    
    <!-- ========== SANITY TESTS - Critical Path ========== -->
    
    <!-- 1. Login -->
    <test name="KFone Login">
        <classes>
            <class name="testrunners.JobMapping.Runner01_KFoneLogin" />
        </classes>
    </test>
    
    <!-- 2. Core job loading functionality -->
    <test name="Add More Jobs Functionality">
        <classes>
            <class name="testrunners.JobMapping.Runner02_AddMoreJobsFunctionality" />
        </classes>
    </test>
    
    <!-- 3. Basic UI loads correctly -->
    <test name="Job Mapping Page Components">
        <classes>
            <class name="testrunners.JobMapping.Runner04_JobMappingPageComponents" />
        </classes>
    </test>
    
    <!-- 4. Core publish workflow works -->
    <test name="Publish Job Profile">
        <classes>
            <class name="testrunners.JobMapping.Runner05_PublishJobProfile" />
        </classes>
    </test>
    
    <!-- 5. Basic filtering works -->
    <test name="Job Mapping Filters">
        <classes>
            <class name="testrunners.JobMapping.Runner08_JobMappingFilters" />
        </classes>
    </test>
    
    <!-- 6. PM module accessible -->
    <test name="HCM Sync Profiles Tab PM">
        <classes>
            <class name="testrunners.JobMapping.Runner18_HCMSyncProfilesTab_PM" />
        </classes>
    </test>
    
    <!-- 7. JAM module accessible -->
    <test name="Select And Publish Loaded Profiles JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner29_SelectAndPublishLoadedProfiles_JAM" />
        </classes>
    </test>
    
    <!-- ========== ADDITIONAL SMOKE TESTS ========== -->
    
    <!-- 8. Publish selected profiles -->
    <test name="Publish Selected Profiles">
        <classes>
            <class name="testrunners.JobMapping.Runner06_PublishSelectedProfiles" />
        </classes>
    </test>
    
    <!-- 9. Search functionality -->
    <test name="Screen1 Search Results">
        <classes>
            <class name="testrunners.JobMapping.Runner07_Screen1SearchResults" />
        </classes>
    </test>
    
    <!-- 10. Sorting works in JAM -->
    <test name="Sorting Functionality JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner14_SortingFunctionality_JAM" />
        </classes>
    </test>
    
    <!-- 11. Sorting works in HCM -->
    <test name="Sorting Functionality In HCM Screen PM">
        <classes>
            <class name="testrunners.JobMapping.Runner34_SortingFunctionalityInHCMScreen_PM" />
        </classes>
    </test>
    
    <!-- 12. Basic persistence -->
    <test name="Sorting Persistence">
        <classes>
            <class name="testrunners.JobMapping.Runner15_SortingPersistence" />
        </classes>
    </test>
    
    <!-- 13. AI mapping feature -->
    <test name="Map Different SP to Profile">
        <classes>
            <class name="testrunners.JobMapping.Runner17_MapDifferentSPtoProfile" />
        </classes>
    </test>
    
    <!-- 14. PM publish center -->
    <test name="Publish Center PM">
        <classes>
            <class name="testrunners.JobMapping.Runner20_PublishCenter_PM" />
        </classes>
    </test>
    
    <!-- 15. Data validation messages -->
    <test name="Info Message Missing Data Profiles">
        <classes>
            <class name="testrunners.JobMapping.Runner23_InfoMessageMissingDataProfiles" />
        </classes>
    </test>
    
    <!-- 16. Sync functionality in PM -->
    <test name="Select And Sync Profiles PM">
        <classes>
            <class name="testrunners.JobMapping.Runner26_SelectAndSyncProfiles_PM" />
        </classes>
    </test>
    
    <!-- 17. PM selection with search -->
    <test name="Select All With Search Functionality PM">
        <classes>
            <class name="testrunners.JobMapping.Runner27_SelectAllWithSearchFunctionality_PM" />
        </classes>
    </test>
    
    <!-- 18. JAM selection with search -->
    <test name="Select All With Search Functionality JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner27_SelectAllWithSearchFunctionality_JAM" />
        </classes>
    </test>
    
</suite>
