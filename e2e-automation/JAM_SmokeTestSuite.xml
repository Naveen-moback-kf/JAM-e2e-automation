<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Job Mapping - Smoke Test Suite" parallel="tests" thread-count="4" preserve-order="true" verbose="2">
    
    <listeners> 
        <listener class-name="com.kfonetalentsuite.listeners.ExcelReportListener" />
        <listener class-name="hooks.JobMapping.SuiteHooks" />
    </listeners>
    
    <!-- SMOKE TESTS - Quick Validation (19 tests) -->
    <!-- Purpose: Validate major features work. Run before each release. -->
    <!-- Estimated Time: 15-25 minutes -->
    
    <!-- ========== SANITY TESTS (7 tests) - Critical Path ========== -->
    
    <!-- 1. Login -->
    <test name="KFone Login">
        <classes>
            <class name="testrunners.JobMapping.Runner01_KFoneLogin" />
        </classes>
    </test>
    
    <!-- 2. Core job loading functionality -->
    <test name="Validate Add More Jobs Functionality">
        <classes>
            <class name="testrunners.JobMapping.Runner02_ValidateAddMoreJobsFunctionality" />
        </classes>
    </test>
    
    <!-- 3. Basic UI loads correctly -->
    <test name="Verify Job Mapping Page Components">
        <classes>
            <class name="testrunners.JobMapping.Runner04_VerifyJobMappingPageComponents" />
        </classes>
    </test>
    
    <!-- 4. Core publish workflow works -->
    <test name="Publish Job From Details Popup">
        <classes>
            <class name="testrunners.JobMapping.Runner08_PublishJobFromDetailsPopup" />
        </classes>
    </test>
    
    <!-- 5. Basic filtering works -->
    <test name="Validate Function Subfunction Filters">
        <classes>
            <class name="testrunners.JobMapping.Runner11c_ValidateFunctionSubfunctionFilters" />
        </classes>
    </test>
    
    <!-- 6. PM module accessible -->
    <test name="Validate HCM Sync Profiles Tab in PM">
        <classes>
            <class name="testrunners.JobMapping.Runner22_ValidateHCMSyncProfilesTab_PM" />
        </classes>
    </test>
    
    <!-- 7. JAM module accessible -->
    <test name="Validate Select And Publish Loaded Profiles in JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner37_ValidateSelectAndPublishLoadedProfiles_JAM" />
        </classes>
    </test>
    
    <!-- ========== ADDITIONAL SMOKE TESTS (11 tests) ========== -->
    
    <!-- 8. Additional publish path -->
    <test name="Publish Job Profile">
        <classes>
            <class name="testrunners.JobMapping.Runner06_PublishJobProfile" />
        </classes>
    </test>
    
    <!-- 9. Search functionality -->
    <test name="Validate Screen1 Search Results">
        <classes>
            <class name="testrunners.JobMapping.Runner10_ValidateScreen1SearchResults" />
        </classes>
    </test>
    
    <!-- 10. Sorting works in JAM -->
    <test name="Validate Sorting Functionality in Job Mapping">
        <classes>
            <class name="testrunners.JobMapping.Runner17_ValidateSortingFunctionality_JAM" />
        </classes>
    </test>
    
    <!-- 11. Sorting works in HCM -->
    <test name="Validate Sorting Functionality in HCM Screen">
        <classes>
            <class name="testrunners.JobMapping.Runner47_ValidateSortingFunctionalityInHCMScreen_PM" />
        </classes>
    </test>
    
    <!-- 12. Basic persistence -->
    <test name="Validate Basic Sorting Persistence">
        <classes>
            <class name="testrunners.JobMapping.Runner18a_ValidateBasicSortingPersistence" />
        </classes>
    </test>
    
    <!-- 13. AI mapping feature -->
    <test name="Map Different SP to Profile In Auto AI">
        <classes>
            <class name="testrunners.JobMapping.Runner21_MapDifferentSPtoProfileInAutoAI" />
        </classes>
    </test>
    
    <!-- 14. PM publish center -->
    <test name="Validate Publish Center in PM">
        <classes>
            <class name="testrunners.JobMapping.Runner24_ValidatePublishCenter_PM" />
        </classes>
    </test>
    
    <!-- 15. Data validation messages -->
    <test name="Verify Info Message For Missing Data Profiles">
        <classes>
            <class name="testrunners.JobMapping.Runner27_VerifyInfoMessageForMissingDataProfiles" />
        </classes>
    </test>
    
    <!-- 16. Sync functionality in PM -->
    <test name="Validate Select And Sync All Profiles in PM">
        <classes>
            <class name="testrunners.JobMapping.Runner34_ValidateSelectAndSyncAllProfiles_PM" />
        </classes>
    </test>
    
    <!-- 17. PM selection -->
    <test name="Validate Select All With Search Functionality in PM">
        <classes>
            <class name="testrunners.JobMapping.Runner35_ValidateSelectAllWithSearchFunctionality_PM" />
        </classes>
    </test>
    
    <!-- 18. JAM selection -->
    <test name="Validate Select All With Search Functionality in JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner38_ValidateSelectAllWithSearchFunctionality_JAM" />
        </classes>
    </test>
    
    <!-- 19. JAM publish all -->
    <test name="Validate Select And Publish All Job Profiles in JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner40_ValidateSelectAndPublishAllJobProfiles_JAM" />
        </classes>
    </test>
    
</suite>

