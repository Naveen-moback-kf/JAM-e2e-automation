# Job Mapping - Configuration Properties (TEMPLATE)
# Copy this file to config.properties and replace placeholders with actual values

# Active Browser Configuration
browser=chrome

# Headless Mode Configuration
headless.mode=true

# Excel Reporting Configuration
excel.reporting=true

# Extent Reporting Configuration
extent.reporting.enabled=true

# Login Type Configuration
login.type=NON_SSO

# Client Verification Settings
target.pams.id=23139

# Environment Configuration
Environment=Dev

# KF HUB Server URLs
DevUrl=https://devproductshub.kornferry.com/
TestUrl=https://testproductshub.kornferry.com/app/arch/#/login
StageUrl=https://stagingproductshub.kornferry.com/
ProdEUUrl=https://products.kornferry.eu/
ProdUSUrl=https://products.kornferry.com/

# KFONE Server URLs
KFONE_DevUrl=https://home.kornferrytalent-dev.com/
KFONE_QAUrl=https://home.kornferrytalent-qa.com/
KFONE_StageUrl=https://home.kornferrytalent-stage.com/
KFONE_ProdUSUrl=https://home.kornferrytalent.com/
KFONE_ProdEUUrl=https://home.kornferrytalent.eu/

# SSO Login Credentials (USE GITHUB SECRETS IN CI/CD)
SSO_Login_Username=${SSO_USERNAME}
SSO_Login_Password=${SSO_PASSWORD}

# NON-SSO Login Credentials (USE GITHUB SECRETS IN CI/CD)
NON_SSO_Login_Username=${NON_SSO_USERNAME}
NON_SSO_Login_Password=${NON_SSO_PASSWORD}

# Performance Optimization Settings
screenshot.enabled=true
screenshot.async=true
screenshot.performance.mode=true
screenshot.throttle.ms=2000
screenshot.max.per.test=3
screenshot.on.timeout=true
screenshot.on.minor.issues=false

# Session Stability Settings
session.recovery.enabled=true
extended.timeouts.enabled=true

# System Power Management
keep.system.awake=false

