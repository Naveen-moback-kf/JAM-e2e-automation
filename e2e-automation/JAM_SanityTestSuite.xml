<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Job Mapping - Sanity Test Suite" 
       parallel="tests" 
       thread-count="3" 
       verbose="2">
    
    <listeners> 
        <listener class-name="com.kfonetalentsuite.listeners.ExcelReportListener" />
        <listener class-name="hooks.JobMapping.SuiteHooks" />
        <listener class-name="com.kfonetalentsuite.listeners.AllureScreenshotListener" />
        <listener class-name="com.kfonetalentsuite.testNGAnalyzer.MyTransform" />
        <listener class-name="com.kfonetalentsuite.testNGAnalyzer.SuiteRetryListener" />
    </listeners>
    
    <!-- SANITY TESTS - Critical Path Tests -->
    <!-- Purpose: Verify the application is minimally functional. If these fail, build is broken. -->
    <!-- Estimated Time: 20-25 minutes with parallel threads -->
    
    <!-- 1. Login - Must be able to login -->
    <test name="KFone Login">
        <classes>
            <class name="testrunners.JobMapping.Runner01_KFoneLogin" />
        </classes>
    </test>
    
    <!-- 2. Core job loading functionality -->
    <test name="Add More Jobs Functionality">
        <classes>
            <class name="testrunners.JobMapping.Runner02_AddMoreJobsFunctionality" />
        </classes>
    </test>
    
    <!-- 3. Basic UI loads correctly -->
    <test name="Job Mapping Page Components">
        <classes>
            <class name="testrunners.JobMapping.Runner04_JobMappingPageComponents" />
        </classes>
    </test>
    
    <!-- 4. Core publish workflow -->
    <test name="Publish Job Profile">
        <classes>
            <class name="testrunners.JobMapping.Runner05_PublishJobProfile" />
        </classes>
    </test>
    
    <!-- 5. Basic filtering works -->
    <test name="Job Mapping Filters">
        <classes>
            <class name="testrunners.JobMapping.Runner08_JobMappingFilters" />
        </classes>
    </test>
    
    <!-- 6. PM module accessible -->
    <test name="HCM Sync Profiles Tab PM">
        <classes>
            <class name="testrunners.JobMapping.Runner18_HCMSyncProfilesTab_PM" />
        </classes>
    </test>
    
    <!-- 7. Missing Data workflow -->
    <test name="Info Message Missing Data Profiles">
        <classes>
            <class name="testrunners.JobMapping.Runner23_InfoMessageMissingDataProfiles" />
        </classes>
    </test>
    
    <!-- 8. JAM module accessible -->
    <test name="Select And Publish Loaded Profiles JAM">
        <classes>
            <class name="testrunners.JobMapping.Runner29_SelectAndPublishLoadedProfiles_JAM" />
        </classes>
    </test>
    
</suite>
